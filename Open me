<script>
const cakePage = document.getElementById("cakePage");
const envelopePage = document.getElementById("envelopePage");
const letterPage = document.getElementById("letterPage");
const candles = document.querySelectorAll(".candle");
const heartsDiv = document.getElementById("hearts");
const music = document.getElementById("music");

function startMic() {
  navigator.mediaDevices.getUserMedia({ audio: true }).then(stream => {
    const ctx = new AudioContext();
    const mic = ctx.createMediaStreamSource(stream);
    const analyser = ctx.createAnalyser();
    mic.connect(analyser);
    analyser.fftSize = 256;

    const data = new Uint8Array(analyser.frequencyBinCount);

    function listen() {
      analyser.getByteFrequencyData(data);
      let volume = data.reduce((a,b)=>a+b)/data.length;
      if (volume > 40) {
        candles.forEach(c => c.classList.remove("on"));
        softHearts();
        setTimeout(() => {
          cakePage.classList.remove("active");
          envelopePage.classList.add("active");
        }, 1000);
      } else requestAnimationFrame(listen);
    }
    listen();
  });
}

function softHearts() {
  for (let i=0;i<10;i++) {
    const h = document.createElement("div");
    h.className="heart";
    h.textContent="ü§ç";
    h.style.left=Math.random()*100+"vw";
    heartsDiv.appendChild(h);
    setTimeout(()=>h.remove(),5000);
  }
}

function openLetter() {
  envelopePage.classList.remove("active");
  letterPage.classList.add("active");
  burstHearts();
  music.volume = 0.4;
  music.play();
}

function burstHearts() {
  for (let i=0;i<25;i++) {
    const b=document.createElement("div");
    b.className="burst";
    b.textContent="ü§ç";
    b.style.setProperty("--x",(Math.random()-0.5)*300+"px");
    b.style.setProperty("--y",(Math.random()-0.5)*300+"px");
    document.body.appendChild(b);
    setTimeout(()=>b.remove(),1000);
  }
}
</script>

